<div class="matrix-cell">
  <div class="matrix-cell-image-wrapper">
    <%= link_to release do %>
      <img src="http://coverartarchive.org/release-group/<%= release.musicbrainz_key %>/front-250" class="matrix-cell-image" alt="<%= release.title %>">
      <div class="matrix-cell-image-overlay"></div>
    <% end %>
    <a href="javascript:void(0)" onclick="$(this).toggleClass('liked');" class="rating"><i class="fa fa-heart rating-heart"></i> <%= Random.rand 100 %></a>
  </div>
  <div class="matrix-cell-title">
    <%= link_to release.title, release %>
  </div>
  <div class="matrix-cell-description">
    <%= link_to release.groups.first.names.where(:primary => true).first.name, group_path(release.groups.first.musicbrainz_key) %>
  </div>
</div>
