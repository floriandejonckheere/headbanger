<% flash.each do |key, value| %>
  <% unless value.blank? %>
    <div class="alert <%= bootstrap_class_for key %>">
      <%= value %>
    </div>
  <% end %>
<% end %>

<% if @resource && @resource.errors.any? %>
  <div class="alert alert-danger">
    <% @resource.errors.full_messages.each do |msg| %>
      <%= msg %><br />
    <% end %>
  </div>
<% end %>
