<% flash.each do |key, value| %>
  <% if not value.blank? %>
    <div class="alert <%= bootstrap_class_for key %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert">
        <i class="fa fa-times"></i>
      </button>
      <%= value %>
    </div>
  <% end %>
<% end %>
