<% content_for :title do %><%= @list.name %><% end %>

<h2><%= @list.name %></h2>

<p>
  <%= link_to 'Edit', edit_list_path(@list) %>
</p>

<p>
  <strong>Name: </strong> <%= @list.name %> <br/>
  <strong>Description: </strong> <%= @list.description %> <br/>
  <strong>Author: </strong> <%= @list.owner.name %>
</p>

<p>
  <strong>Items: </strong>
  <ul>
    <% @list.items.each do |item| %>
      <li><%= item %> (<%= item.class %>)</li>
    <% end %>
  </ul>
</p>
